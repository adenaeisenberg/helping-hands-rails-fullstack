<h1>Add Opportunity</h1>
<%= form_with model: @opportunity do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>
  <div>
    <%= form.label :date %>
    <%= form.text_field :date %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end%>
<br>
<a href="/opportunities">Back to All Opportunities</a>